WITH Ada.Text_Io;
WITH Ada.Integer_Text_Io;

-- Program to demonstrate constant and variable declarations.
PROCEDURE Jan23 IS
   Pi: CONSTANT Float := 3.14159;
   MaxStudentCount: constant Integer := 30;
   ErrorMessage: CONSTANT String := "Error Detected";
   StudentCount: Integer;
   Hours: float;
BEGIN
   Ada.Text_Io.Put(Item=>"Welcome to my program.");
   Ada.Text_Io.New_Line;
   Ada.Integer_Text_Io.Put(Item=>MaxStudentCount);
   Ada.Text_Io.New_Line;
   StudentCount := 23;
   Ada.Text_Io.Put(Item=>"Student count is: ");
   Ada.Integer_Text_Io.Put(Item=>StudentCount);
   -- increment a variable
   StudentCount := StudentCount + 1;
   Ada.Text_Io.Put(Item=>"Student count is: ");
   Ada.Integer_Text_Io.Put(Item=>StudentCount);
END Jan23;

   